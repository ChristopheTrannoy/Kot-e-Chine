<!DOCTYPE html>
<html>
<head>
  <title>Kot-é-Chine</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <div class="navbar-header">
        <%= link_to "Kot-é-Chine", root_path %>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Accueil", root_path  %></li>
        <li><%= link_to "Evénements", events_path %></li>
        <li><%= link_to "Articles", articles_path %></li>
        <% if logged_in? %>
          <% if current_user.email == 'admin@kotechine.fr' %>
          <li><%= link_to "Utilisateurs", users_path %></li>
            <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Mon profil", current_user %></li>
              <li><%= link_to "Paramètre", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Déconnexion", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Connexion", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>


<div class="container">
      <% if flash[:success] %>
        <div class="alert alert-success">
          <%= flash[:success] %>
        </div>
      <% end %>

      <% if flash[:danger] %>
        <div class="alert alert-danger">
          <%= flash[:danger] %>
        </div>
      <% end %>
      <%= yield %>
    </div>

  </body>
</html>
