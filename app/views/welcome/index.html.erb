

<h2>Bienvenue sur le site du Kot-é-Chine !</h2>

<p>Voici la liste des évenenements que nous proposons :</p>


<%= @date %>

  <h3>Voici les évenements en cours :</h3>
<table>
  <thead>
  <tr>
    <th>Nom</th>
    <th>Date de début</th>
    <th>Date de fin</th>
    <th>Lieux</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @events.each do |event| %>
    <tr>
      <%  if event.startDate < @date && event.endDate > @date %>
        <td><%= event.name %></td>
        <td><%= event.startDate %></td>
        <td><%= event.endDate %></td>
        <td><%= event.eventPlace %></td>
      <%  end %>
    </tr>
  <% end %>
  </tbody>
</table>

